# DaisyChain Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Node Environment
NODE_ENV=production

# Server Configuration
HOSTNAME=your-domain.com
PORT=443
REDIRECT_PORT=80

# SSL/TLS Configuration
# Path to SSL certificate file (PEM format)
SSL_CERT_PATH=./certs/cert.pem
# Path to SSL private key file (PEM format)
SSL_KEY_PATH=./certs/key.pem

# MeshCentral Configuration
MESHCENTRAL_CERT_NAME=your-domain.com
MESHCENTRAL_PORT=443
MESHCENTRAL_REDIRECT_PORT=80

# Let's Encrypt Configuration
LETSENCRYPT_EMAIL=your-email@example.com
LETSENCRYPT_DOMAIN=your-domain.com
LETSENCRYPT_PRODUCTION=true

# Application Settings
ALLOW_NEW_ACCOUNTS=false
ENABLE_IPKVM=false
ALLOW_LOGIN_TOKEN=true
WAN_ONLY=true

# Python Configuration
PYTHONUNBUFFERED=1

# PostgreSQL Configuration
# Railway auto-provides: PGHOST, PGPORT, PGUSER, PGPASSWORD, PGDATABASE
# These are mapped automatically in docker-entrypoint.sh
# For local testing, uncomment and set these values:
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_password_here
# POSTGRES_DATABASE=meshcentral

# Railway/Deployment Specific (if applicable)
# RAILWAY_ENVIRONMENT=production
